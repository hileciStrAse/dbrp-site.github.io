<!-- 3D Effekt üçün JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.card-3d');
    
    cards.forEach(card => {
        card.addEventListener('mousemove', function(e) {
            const rect = card.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const rotateX = (y - centerY) / 10;
            const rotateY = (centerX - x) / 10;
            
            card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.05, 1.05, 1.05)`;
            card.style.boxShadow = `0 15px 35px rgba(0, 0, 0, 0.2), ${(x - centerX) / 20}px ${(y - centerY) / 20}px 20px rgba(255, 128, 0, 0.2)`;
        });
        
        card.addEventListener('mouseleave', function() {
            card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
            card.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.1)';
        });
    });
});
</script>

<!-- API-dən məlumatları almaq üçün JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // API-dən məlumatları al
    fetchBotStatus();
    
    // Hər 60 saniyədə bir məlumatları yenilə
    setInterval(fetchBotStatus, 60000);
    
    function fetchBotStatus() {
        fetch('https://dbrp.onrender.com/api')
            .then(response => response.json())
            .then(data => {
                updateBotStatus(data);
            })
            .catch(error => {
                console.error('API xətası:', error);
                // Xəta halında statusu dəyiş
                document.getElementById('status-indicator').classList.remove('bg-green-500', 'bg-yellow-500');
                document.getElementById('status-indicator').classList.add('bg-red-500');
                document.getElementById('bot-status').textContent = 'Əlaqə xətası';
                document.getElementById('bot-status').classList.remove('text-green-400', 'text-yellow-400');
                document.getElementById('bot-status').classList.add('text-red-400');
            });
    }
    
    function updateBotStatus(data) {
        // Bot məlumatları
        document.getElementById('bot-name').textContent = data.bot_info.name;
        document.getElementById('bot-description').textContent = data.bot_info.description;
        document.getElementById('bot-version').textContent = data.bot_info.version;
        
        // Bot statusu
        const statusIndicator = document.getElementById('status-indicator');
        const botStatusText = document.getElementById('bot-status');
        
        if (data.bot_status.bot_online) {
            statusIndicator.classList.remove('bg-gray-500', 'bg-red-500', 'bg-yellow-500');
            statusIndicator.classList.add('bg-green-500');
            botStatusText.textContent = data.bot_status.status;
            botStatusText.classList.remove('text-gray-400', 'text-red-400', 'text-yellow-400');
            botStatusText.classList.add('text-green-400');
        } else {
            statusIndicator.classList.remove('bg-gray-500', 'bg-green-500', 'bg-yellow-500');
            statusIndicator.classList.add('bg-red-500');
            botStatusText.textContent = 'Offline';
            botStatusText.classList.remove('text-gray-400', 'text-green-400', 'text-yellow-400');
            botStatusText.classList.add('text-red-400');
        }
        
        // Sistem məlumatları
        document.getElementById('system-status').textContent = data.system_status.status;
        
        // Uptime-ı formatla (saniyələri gün, saat, dəqiqə formatına çevir)
        const uptime = data.system_status.uptime;
        const days = Math.floor(uptime / 86400);
        const hours = Math.floor((uptime % 86400) / 3600);
        const minutes = Math.floor((uptime % 3600) / 60);
        const uptimeFormatted = `${days} gün, ${hours} saat, ${minutes} dəqiqə`;
        document.getElementById('system-uptime').textContent = uptimeFormatted;
        
        // Saat qurşağı və vaxt məlumatları
        document.getElementById('timezone').textContent = data.time_info.timezone;
        document.getElementById('current-time').textContent = `${data.time_info.day}, ${data.time_info.date} ${data.time_info.time}`;
        
        // Son yenilənmə vaxtı
        const now = new Date();
        document.getElementById('last-updated').textContent = now.toLocaleTimeString();
    }
});
</script>