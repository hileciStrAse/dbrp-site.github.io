<div class="space-y-8">
    <div class="bg-gray-800/30 backdrop-blur-xl border border-white/10 rounded-xl p-6 shadow-lg transform hover:scale-105 transition duration-300 hover:shadow-orange-500/20 card-3d">
        <h1 class="text-3xl font-bold text-orange-500 mb-4">İdarə Paneli</h1>
        <p class="text-gray-300">İdarə panelinə xoş gəlmisiniz! Buradan botunuzun ayarlarını idarə edə bilərsiniz.</p>
    </div>

    <div class="bg-gray-800/30 backdrop-blur-xl border border-white/10 rounded-xl p-6 shadow-lg transform hover:scale-105 transition duration-300 hover:shadow-orange-500/20 card-3d">
        <h2 class="text-2xl font-semibold text-orange-400 mb-4">Server Seçimi</h2>
        <p class="text-gray-400 mb-4">İdarə etmək istədiyiniz serveri seçin:</p>
        <div class="relative">
            <select id="server-select" class="block w-full bg-gray-700/50 border border-gray-600 text-white py-3 px-4 pr-8 rounded-lg leading-tight focus:outline-none focus:bg-gray-700 focus:border-orange-500 appearance-none shadow-md hover:border-orange-400 transition duration-200">
                <option value="" disabled selected>Server seçin...</option>
                <option value="server1">Server 1 (Misal)</option>
                <option value="server2">Server 2 (Misal)</option>
                <option value="server3">Başqa bir Server (Misal)</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-400">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
            </div>
        </div>
        <button id="manage-server-btn" class="mt-6 w-full bg-gradient-to-r from-orange-500 to-yellow-400 hover:from-orange-600 hover:to-yellow-500 text-gray-900 font-semibold py-3 px-6 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition duration-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-opacity-75 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
            Serveri İdarə Et
        </button>
    </div>
</div>

<script>
    const serverSelect = document.getElementById('server-select');
    const manageServerBtn = document.getElementById('manage-server-btn');

    serverSelect.addEventListener('change', function() {
        if (this.value) {
            manageServerBtn.disabled = false;
            manageServerBtn.classList.remove('disabled:opacity-50', 'disabled:cursor-not-allowed');
        } else {
            manageServerBtn.disabled = true;
            manageServerBtn.classList.add('disabled:opacity-50', 'disabled:cursor-not-allowed');
        }
    });

    manageServerBtn.addEventListener('click', function() {
        if (serverSelect.value) {
            // Burada seçilmiş server ilə bağlı əməliyyatlar yerinə yetiriləcək
            // Məsələn: window.location.href = '/dashboard/' + serverSelect.value;
            alert('Seçilmiş server: ' + serverSelect.options[serverSelect.selectedIndex].text);
        } else {
            alert('Zəhmət olmasa bir server seçin.');
        }
    });
</script>